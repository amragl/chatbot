<aiml version="1.0.1" encoding="UTF-8">
	<!-- std-startup.xml -->

	<!-- Category is an atomic AIML unit -->
	<category>

		<!-- Pattern to match in user input -->
		<!-- If user enters "LOAD AIML B" -->
		<pattern>LOAD AIML KB</pattern>

		<!-- Template is the response to the pattern -->
		<!-- This learns an aiml file -->
		<template>
			<learn>info/mybot_inference.aiml</learn>
			<learn>info/mybot_conversation.aiml</learn>
			<learn>info/mybot_image_recon.aiml</learn>
			<learn>info/mybot_jokes.aiml</learn>
			<!-- You can add more aiml files here -->
			<!--<learn>more_aiml.aiml</learn>-->
		</template>

	</category>

</aiml>